<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity11">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn0"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn12"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="12"
        android:background="#FF0000"
        app:layout_constraintBottom_toTopOf="@id/btn1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintCircle="@id/btn0"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintCircleAngle="0"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn1"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="#FF6600"
        app:layout_constraintBottom_toTopOf="@id/btn0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintCircle="@id/btn0"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintCircleAngle="30"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn2"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="#FF6600"
        app:layout_constraintBottom_toTopOf="@id/btn0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintCircle="@id/btn0"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintCircleAngle="60"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#FFDD00"
        android:text="3"
        app:layout_constraintTop_toBottomOf="@id/btn2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintCircle="@id/btn0"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintCircleAngle="90"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn4"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="#11FF00"
        app:layout_constraintTop_toBottomOf="@id/btn3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintCircle="@id/btn0"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintCircleAngle="120"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn5"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="#11FF00"
        app:layout_constraintTop_toBottomOf="@id/btn4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintCircle="@id/btn0"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintCircleAngle="150"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#002AFF"
        android:text="6"
        app:layout_constraintTop_toBottomOf="@id/btn0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintCircle="@id/btn0"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintCircleAngle="180"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn7"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="#4C00FF"
        app:layout_constraintTop_toBottomOf="@id/btn0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintCircle="@id/btn0"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintCircleAngle="210"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn8"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="#4C00FF"
        app:layout_constraintTop_toBottomOf="@id/btn0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintCircle="@id/btn0"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintCircleAngle="240"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn9"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#9500FF"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@id/btn8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintCircle="@id/btn0"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintCircleAngle="270"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn10"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="#FF00B7"
        app:layout_constraintBottom_toTopOf="@id/btn0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintCircle="@id/btn0"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintCircleAngle="300"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn11"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="#FF00B7"
        app:layout_constraintBottom_toTopOf="@id/btn0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintCircle="@id/btn0"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintCircleAngle="330"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="150dp"
        android:layout_height="2dp"
        android:background="#FF0000"
        android:id="@+id/handSecond"
        app:layout_constraintCircle="@id/btn0"
        app:layout_constraintCircleRadius="70dp"
        app:layout_constraintCircleAngle="90" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="#0000FF"
        android:id="@+id/handMinute"
        app:layout_constraintCircle="@id/btn0"
        app:layout_constraintCircleRadius="50dp"
        app:layout_constraintCircleAngle="90" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="60dp"
        android:layout_height="2dp"
        android:background="#000000"
        android:id="@+id/handHour"
        app:layout_constraintCircle="@id/btn0"
        app:layout_constraintCircleRadius="30dp"
        app:layout_constraintCircleAngle="90" />

</androidx.constraintlayout.widget.ConstraintLayout>